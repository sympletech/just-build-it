{
  "name": "just-build-it",
  "version": "0.0.1",
  "description": "A reusable builder to compile es6 and scss from a source directory into a destination directory",
  "bin": {
    "just-build-it": "bin/just-build-it.js"
  },
  "main": "gulpfile.js",
  "scripts": {
    "start": "just-build-it",
    "build": "just-build-it build",
    "build-js": "just-build-it build-js",
    "build-scss": "just-build-it build-scss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dlewis-esri/just-build-it.git"
  },
  "keywords": [
    "es6",
    "build",
    "scss"
  ],
  "author": "Daniel A. Lewis",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dlewis-esri/just-build-it/issues"
  },
  "homepage": "https://github.com/dlewis-esri/just-build-it#readme",
  "just_build_it":{
    "src_path": "./src",
    "js_glob": "**/*.js",
    "scss_glob": "**/*.scss",
    "build_path" : "./dist"
  },
  "dependencies": {
    "fs-extra": "^7.0.1",
    "gulp": "^3.9.1",
    "require-dir": "^1.2.0"
  }
}
